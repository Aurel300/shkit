#!/bin/bash

# iscool
#   by Aurel Bílý (2015-17)
#   https://github.com/Aurel300/shkit
#   see LICENSE file

bindir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [[ $? -ne 0 ]]; then
    # non-zero exit code = error
    sox -q "$bindir/../assets/error.wav" -d
else
    # zero exit code = ok
    sox -q "$bindir/../assets/ok.wav" -d
fi
